<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>To-Do List</title>
    <link href="/styles/style.css" rel="stylesheet" />
  </head>
  <body class="bg-gray-100 font-sans ">
    <div class="container mx-auto p-4 max-w-2xl">
      <h1 class="text-3xl text-center text-blue-500 mb-6 font-semibold">
        To-Do List
      </h1>

      <!-- List of tasks -->
      <ul class="space-y-4">
        <% tasks.forEach(task => { %>
        <li
          class="flex justify-between items-center p-4 bg-white shadow-lg rounded-lg"
        >
          <span
            class="<%= task.isCompleted ? 'line-through text-gray-400' : 'text-black' %> text-lg"
          >
            <%= task.task %>
          </span>

          <!-- Buttons group with space between -->
          <div class="flex space-x-4">
            <!-- Mark as completed -->
            <% if (!task.isCompleted) { %>
            <form action="/tasks/<%= task.id %>/complete" method="POST">
              <button
                type="submit"
                class="px-4 py-2 bg-blue-500 text-white rounded-md"
              >
                Complete
              </button>
            </form>
            <% } %>

            <!-- Delete task -->
            <form action="/tasks/<%= task.id %>" method="POST">
              <button
                type="submit"
                class="px-4 py-2 bg-red-500 text-white rounded-md ml-5"
              >
                Delete
              </button>
            </form>
          </div>
        </li>
        <% }); %>
      </ul>

      <!-- Form to add a new task -->
      <form action="/add-task" method="POST" class="mt-6 flex justify-between">
        <input
          type="text"
          name="task"
          placeholder="Enter task"
          required
          class="p-2 border border-gray-300 rounded mr-2 w-[82%]"
        />
        <button type="submit" class="px-4 py-2 bg-green-500 text-white rounded">
          Add Task
        </button>
      </form>
    </div>
  </body>
</html>
